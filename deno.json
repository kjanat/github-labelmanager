{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "name": "@kjanat/github-labelmanager",
  "version": "1.1.0-0",
  "description": "Easily manage GitHub labels",
  "keywords": [
    "github-labelmanager",
    "github",
    "issues",
    "labelmanager",
    "labels"
  ],
  "bugs": "https://github.com/kjanat/github-labelmanager/issues",
  "repository": "https://github.com/kjanat/github-labelmanager",
  "license": "MIT",
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "imports": {
    "@octokit/webhooks-types": "npm:@octokit/webhooks-types@^7.6.1",
    "~/": "./src/",
    "$/": "./",
    "github-labelmanager": "./main.ts",
    "@actions/core": "npm:@actions/core@^1.11.1",
    "@actions/github": "npm:@actions/github@^6.0.1",
    "@commitlint/cli": "npm:@commitlint/cli@^20.2.0",
    "@commitlint/config-conventional": "npm:@commitlint/config-conventional@^20.2.0",
    "@commitlint/types": "npm:@commitlint/types@^20.2.0",
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@octokit/openapi-types": "npm:@octokit/openapi-types@^27.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/cli": "jsr:@std/cli@^1.0.24",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/json": "jsr:@std/json@^1.0.2",
    "ajv": "npm:ajv@^8.17.1",
    "lefthook": "npm:lefthook@^2.0.9",
    "octokit": "npm:octokit@^5.0.5",
    "yaml": "jsr:@eemeli/yaml@^2.8.2",
    "zod-validation-error": "npm:zod-validation-error@^5.0.0",
    "zod": "npm:zod@^4.1.13"
  },
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./main.ts"
  },
  "fmt": {
    "exclude": ["npm", ".github/actions"]
  },
  "lint": {
    "include": ["main.ts", "src", "scripts", "__tests__"],
    "exclude": ["npm"],
    "rules": { "exclude": ["no-import-prefix"] }
  },
  "test": {
    "include": ["__tests__"],
    "exclude": ["npm", ".github"],
    "permissions": {
      "read": [
        "./.github",
        "./src",
        "./scripts",
        "./__tests__",
        "/tmp",
        "./nonexistent.yml",
        "./nonexistent"
      ],
      "write": ["/tmp"],
      "env": [
        "DEBUG",
        "GITHUB_TOKEN",
        "GITHUB_ACTIONS",
        "CONFIG_PATH",
        "DRY_RUN",
        "REPO",
        "NO_SPINNER_DELAY",
        "NO_COLOR",
        "JEST_WORKER_ID",
        "NODE_V8_COVERAGE",
        "GITHUB_EVENT_PATH",
        "GITHUB_EVENT_NAME",
        "GITHUB_SHA",
        "GITHUB_REF",
        "GITHUB_WORKFLOW",
        "GITHUB_ACTION",
        "GITHUB_ACTOR",
        "LOG_TOKENS",
        "GITHUB_JOB",
        "GITHUB_RUN_ATTEMPT",
        "LOG_STREAM",
        "GITHUB_RUN_NUMBER",
        "GITHUB_RUN_ID",
        "GITHUB_API_URL",
        "GITHUB_SERVER_URL",
        "GITHUB_GRAPHQL_URL",
        "no_proxy",
        "NO_PROXY",
        "NODE_V8_COVERAGE",
        "https_proxy",
        "HTTPS_PROXY"
      ],
      "net": ["api.github.com:443"],
      "run": true,
      "ffi": true
    }
  },
  "bin": {
    "github-labelmanager": "./esm/main.js"
  },
  "nodeModulesDir": "auto",
  "publish": {
    "include": [
      ".github/labels.schema.json",
      "deno.json",
      "deno.lock",
      "LICENSE",
      "main.ts",
      "README.md",
      "scripts",
      "src"
    ]
  },
  "readme": "README.md",
  "tasks": {
    "build": "deno run -A scripts/build_npm.ts",
    "compile": "deno compile --allow-net=api.github.com -RE -o github-labelmanager main.ts",
    "dev": "deno run --watch main.ts",
    "hooks": "lefthook install",
    "labels": "deno run --allow-net=api.github.com -RE main.ts",
    "labels:dry-run": "deno run --allow-net=api.github.com -RE main.ts --dry-run kjanat/github-labelmanager",
    "schema": "deno run -A scripts/build_schema.ts",
    "test:coverage": "deno test -RWE __tests__/ --coverage",
    "test": "deno test -RWE __tests__/"
  },
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "$/*": ["./*"],
      "github-labelmanager": ["./main.ts"]
    }
  }
}
