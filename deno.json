{
  "name": "github-labelmanager",
  "version": "1.0.0-dev",
  "description": "Easily manage GitHub labels",
  "keywords": [
    "github-labelmanager",
    "github",
    "issues",
    "labelmanager",
    "labels"
  ],
  "bugs": "https://github.com/kjanat/github-labelmanager/issues",
  "repository": "github.com:kjanat/github-labelmanager",
  "license": "MIT",
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@octokit/auth-action": "npm:@octokit/auth-action@^6.0.2",
    "@octokit/openapi-types": "npm:@octokit/openapi-types@^27.0.0",
    "@octokit/plugin-throttling": "npm:@octokit/plugin-throttling@^11.0.3",
    "@octokit/rest": "npm:@octokit/rest@^22.0.1",
    "@octokit/types": "npm:@octokit/types@^16.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/yaml": "jsr:@std/yaml@^1.0.10",
    "lefthook": "npm:lefthook@^2.0.5",
    "@/": "./src/",
    "~/": "./"
  },
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./main.ts"
  },
  "nodeModulesDir": "auto",
  "publish": {
    "include": [
      "src/**/*.ts",
      "main.ts",
      "deno.json",
      "README.md",
      "LICENSE"
    ]
  },
  "readme": "README.md",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "deno run -A scripts/build_npm.ts",
    "compile": "deno compile --allow-net --allow-read --allow-env --output labels main.ts",
    "hooks": "lefthook install",
    "labels": "deno run --allow-net=api.github.com --allow-read --allow-env main.ts",
    "labels:dry-run": "deno run --allow-net=api.github.com --allow-read --allow-env main.ts --dry-run",
    "test": "deno test --allow-read --allow-env src/"
  }
}
