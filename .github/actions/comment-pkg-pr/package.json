{
  "name": "comment-pkg-pr",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "packageManager": "bun@1.3.3",
  "engines": {
    "node": ">=24.0.0"
  },
  "types": "src/index.ts",
  "module": "src/index.ts",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "keywords": [
    "actions"
  ],
  "scripts": {
    "all": "bun run format:write && bun run lint && bun run test && bun run coverage && bun run package",
    "bundle": "bun run format:write && bun run package",
    "ci-test": "bun test --coverage --coverage-reporter=lcov --reporter=junit --reporter-outfile=./junit.xml",
    "coverage": "bun test --coverage",
    "format:check": "bunx prettier --check .",
    "format:write": "bunx prettier --write .",
    "lint": "bunx eslint .",
    "local-action": "bash -c 'rm -rf _github_output.log _github_step-summary.md && touch _github_{output.log,step-summary.md} && DIR=$(pwd) && cd \"$(git rev-parse --show-toplevel)\" && bunx @github/local-action $DIR src/index.ts $DIR/.env'",
    "package": "tsdown",
    "package:watch": "tsdown --watch",
    "test": "bun test",
    "typecheck": "tsgo --noEmit"
  },
  "peerDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251208.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/webhooks-types": "^7.6.1"
  },
  "optionalDependencies": {
    "@types/bun": "latest"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@github/local-action": "^6.0.2",
    "@kjanat/prettier-config": "^1.1.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "pkg-pr-new": "^0.0.62",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.1"
  },
  "prettier": "@kjanat/prettier-config",
  "volta": {
    "node": "24.11.1"
  }
}
